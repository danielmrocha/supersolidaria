{% if attributes -%}
   <div{{ attributes.addClass('slidershow-v1') }}>
{% endif %}
   
   {% if title %}
      <h3>{{ title }}</h3>
   {% endif %}

   {% set i = 0 %}
   {% for row in rows %}
      {% set i = i + 1 %}

      {% if i == 1 %}
         <div class="item">
            <div class="post-large">{{ row.content|raw }}</div>
         </div>       
      {% else %}
         {% if i == 2 %} <div class="item"> {% endif %}
            {% if i % 2 == 0 %} <div class="items-small"> {% endif %}
               <div class="post-small-item">
                  <div class="item content">{{ row.content|raw }}</div>
               </div> 
            {% if i % 2 == 1 or i == rows|length %}</div>{% endif %}
         {% if i == 5 or i == rows|length %} </div> {% endif %}
      {% endif %}  

      {% if i == 5 %}{% set i = 0 %}{% endif %}
   {% endfor %} 

{% if attributes -%}
    </div>
{% endif %}

